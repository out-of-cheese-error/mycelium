{
    "identifier": "default",
    "description": "Default capabilities for Mycelium desktop app",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        "shell:allow-open",
        {
            "identifier": "shell:allow-spawn",
            "allow": [
                {
                    "name": "mycelium-backend",
                    "sidecar": true
                }
            ]
        }
    ]
}