{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Mycelium",
    "version": "1.0.0",
    "identifier": "com.mycelium.desktop",
    "build": {
        "beforeDevCommand": "cd ../frontend && npm run dev",
        "devUrl": "http://localhost:5173",
        "beforeBuildCommand": "cd ../frontend && npm run build",
        "frontendDist": "../../frontend/dist"
    },
    "app": {
        "windows": [
            {
                "title": "Mycelium",
                "width": 1400,
                "height": 900,
                "resizable": true,
                "fullscreen": false,
                "center": true,
                "useHttpsScheme": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [],
        "externalBin": [
            "binaries/mycelium-backend"
        ]
    },
    "plugins": {
        "shell": {
            "open": true
        }
    }
}